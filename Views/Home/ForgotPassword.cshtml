@{ Layout = null; }

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Customer Master Portal</title>

    <!-- Font Awesome -->
    @Styles.Render("~/Content/vendor/fontawesome-free/css/all.min.css")
    <!-- Custom -->
    @Styles.Render("~/Content/css/sb-admin.css")
    @Styles.Render("~/Content/css/forgot-password.css")
</head>

<body class="bg-dark">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/images/symphony-health-horizontal-logo-pink.png" alt="">
    </div>
    <div class="container">
        <!-- Error Alert -->
        <div id="error-alert" class="alert alert-danger alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Error!</h4>
            <p id="error-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <!-- Info Alert -->
        <div id="info-alert" class="alert alert-info alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-info-circle"></i> Attention!</h4>
            <p id="info-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Customer Master Portal</div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <h4>Forgot your password?</h4>
                    <p>Enter your email address and we will send you instructions on how to reset your password.</p>
                </div>
                <form>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Enter email address" required="required" autofocus="autofocus">
                            <label for="inputEmail">Enter email address</label>
                        </div>
                    </div>
                    <input type="button" class="btn btn-block btn-forgot-password" value="Send Email" />
                </form>
                <div class="text-center">
                    <a class="d-block small" href="~/Home/Login">Login Page</a>
                </div>
            </div>
        </div>
    </div>

</body>

<!-- jQuery -->
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
<!-- Bootstrap -->
@Scripts.Render("~/Scripts/bootstrap.min.js")
<!-- Nofify -->
@Scripts.Render("~/Content/vendor/notify.js/notify.js")
<!-- Custom -->
@Scripts.Render("~/Content/js/pages/forgot-password.js")