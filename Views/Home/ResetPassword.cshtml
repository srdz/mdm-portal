@model MDM_Portal.Models.ResetPasswordModel

@{ Layout = null; }

@Html.AntiForgeryToken()

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Customer Master Portal</title>

    <!-- Font Awesome -->
    @Styles.Render("~/Content/vendor/fontawesome-free/css/all.min.css")
    <!-- Custom -->
    @Styles.Render("~/Content/css/sb-admin.css")
    @Styles.Render("~/Content/css/reset-password.css")
</head>

<body class="bg-dark">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/images/symphony-health-horizontal-logo-pink.png" alt="">
    </div>

    <div class="container">
        <!-- Error Alert -->
        <div id="error-alert" class="alert alert-danger alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Error!</h4>
            <p id="error-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <!-- Success Alert -->
        <div id="success-alert" class="alert alert-success alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-check-circle"></i> Password Reset Successful</h4>
            <p id="success-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Customer Master Portal</div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <h4>Reset Password</h4>
                    <p>Description here</p>
                </div>
                <form>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="inputNewPassword" class="form-control" placeholder="New Password" required="required" autofocus="autofocus">
                            <label for="inputNewPassword">New Password</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" required="required">
                            <label for="inputConfirmPassword">Confirm Password</label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(a => a.resetcode)
                    </div>
                    <input type="button" class="btn btn-block btn-reset" value="Update Password" />
                </form>
                <div class="text-center">
                    <a class="d-block small" href="~/Home/Login">Login Page</a>
                </div>
            </div>
        </div>
    </div>

</body>

<!-- jQuery -->
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
<!-- Bootstrap -->
@Scripts.Render("~/Scripts/bootstrap.min.js")
<!-- Nofify -->
@Scripts.Render("~/Content/vendor/notify.js/notify.js")
<!-- Custom -->
@Scripts.Render("~/Content/js/pages/reset-password.js")