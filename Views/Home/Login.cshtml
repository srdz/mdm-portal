@{ Layout = null; }

@Html.AntiForgeryToken()

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Customer Master Portal</title>

    <!-- Font Awesome -->
    @Styles.Render("~/Content/vendor/fontawesome-free/css/all.min.css")
    <!-- Custom CSS -->
    @Styles.Render("~/Content/css/sb-admin.css")
    @Styles.Render("~/Content/css/login.css")
</head>

<body class="bg-dark">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/images/symphony-health-horizontal-logo-pink.png" alt="">
    </div>

    <div class="container">
        <!-- Error Alert -->
        <div id="error-alert" class="alert alert-danger alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Error!</h4>
            <p id="error-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <!-- Success Alert -->
        <div id="success-alert" class="alert alert-success alert-dismissible fade hide col-md-6">
            <h4 class="alert-heading"><i class="fas fa-check-circle"></i> Password Reset Successful</h4>
            <p id="success-text"></p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Customer Master Portal</div>
            <div class="card-body">
                <form method="post" action="" id="login-form" class="needs-validation" novalidate>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="text" id="inputUsername" class="form-control" placeholder="Username" required="required" autofocus="autofocus">
                            <label for="inputUsername">Username</label>
                            <div class="invalid-feedback">Username is required.</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
                            <label for="inputPassword">Password</label>
                            <div class="invalid-feedback">Password is required.</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="remember-me" value="remember-me">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <input type="button" class="btn btn-block btn-login" value="Login" />
                </form>
                <div class="text-center">
                    <a class="d-block small" href="~/Home/ForgotPassword">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</body>

<!-- jQuery -->
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
<!-- Bootstrap -->
@Scripts.Render("~/Scripts/bootstrap.min.js")
<!-- Cookie -->
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js")
<!-- Nofify -->
@Scripts.Render("~/Content/vendor/notify.js/notify.js")
<!-- Custom -->
@Scripts.Render("~/Content/js/pages/login.js")
